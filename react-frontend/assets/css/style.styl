  border: none
.deck-crypt-table td
  text-align: center
.deck-crypt-table td.name
  text-align: left
.deck-crypt-table td.text
  text-align: left
  font-size: small

.deck-library-table
  width: 100%
.deck-library-table td.quantity
  width: 20%
.deck-library-table td.name
  width: 45%
.deck-library-table td.cost
  width: 5%
.deck-library-table td.clan,
.deck-library-table td.disciplines
  width: 23%
.deck-library-table td.burn
  width: 7%
.deck-library-table td
  border-top: 1px solid lightgray
  border-bottom: 1px solid lightgray
  border-collapse: collapse
.deck-library-table td
  text-align: center
.deck-library-table td.name
  text-align: left
.deck-library-table td.text
  text-align: left
  font-size: small

.search-crypt-table
  width: 100%
.search-crypt-table td.capacity
  width: 8%
.search-crypt-table td.disciplines
  width: 41%
.search-crypt-table td.name
  width: 34%
.search-crypt-table td.clan
  width: 11%
.search-crypt-table td.group
  width: 6%
.search-crypt-table td
  border-top: 1px solid lightgray
  border-bottom: 1px solid lightgray
  border-collapse: collapse
.search-crypt-table .discipline td
  border: none
.search-crypt-table td
  text-align: center
.search-crypt-table td.name
  text-align: left

.search-library-table
  width: 100%
.search-library-table td.cost
  width: 7%
.search-library-table td.type
  width: 13%
.search-library-table td.disciplines
  width: 22%
.search-library-table td.name
  width: 38%
  text-align: left
.search-library-table td.clan
  width: 12%
.search-library-table td.burn
  width: 8%
.search-library-table td
  border-top: 1px solid lightgray
  border-bottom: 1px solid lightgray
  border-collapse: collapse
.search-library-table td
  text-align: center
.search-library-table td.name
  text-align: left
.search-library-table div.sets
  font-size: x-small
  text-align: right

div.popover-sets
  font-size: x-small
  text-align: right

div.forgot-password
  font-size: small

span.password-hide-show
  margin-left: -25px
  padding-right: 10px

span.question-tooltip
  font-size: small
  color: gray

span.login-error
  font-size: small
  color: red

span.select-deck-date
  font-size: small
  color: gray

.clan-image-results
  height: 27px
.discipline-image-results,
.discipline-base-image-results,
.burn-image-results,
.trifle-image-results,
.advanced-image-results
  height: 25px
.type-image-results
  height: 27px
.discipline-superior-image-results
  height: 30px
.cost-image-results
  height: 36px
.capacity-image-results
  height: 26px
.discipline-base-image-forms
  width: 34px
  height: 34px
.discipline-superior-image-forms
  width: 40px
  height: 40px
.virtue-image
  margin-left: 4px
  margin-right: 5px
  height: 33px

.discipline-container,
.virtue-container
  width: 42px
  height: 42px
.discipline-container:hover,
.virtue-container:hover
  cursor: pointer
.discipline-container.state0 .discipline-base-image-forms
  display: flex
  opacity: 0.35
.discipline-container.state0 .discipline-superior-image-forms
  display: none
.discipline-container.state1 .discipline-base-image-forms
  display: flex
.discipline-container.state1 .discipline-superior-image-forms
  display: none
.discipline-container.state2 .discipline-base-image-forms
  display: none
.discipline-container.state2 .discipline-superior-image-forms
  display: flex
.virtue-container.state0 .virtue-image
  display: flex
  opacity: 0.35
.virtue-container.state1 .virtue-image
  display: flex

.library-result-odd,
.crypt-result-odd
  background-color: #eaeaea

.navbar
  padding: 0rem

hr
  margin: 0.5rem

.nobr
  white-space: nowrap

textarea.deck-import
  font-family: monospace
  font-size: medium
textarea.deck-import:focus
  color: black

.add-new-card
  max-width: 100%

@media (max-width: 1399px)
  .main-container
    min-width: 100%

@media (min-width: 1400px)
  .main-container
    min-width: 1400px
    max-width: 1400px