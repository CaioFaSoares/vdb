a
  color: #306090

span.link-like
  color: #306090

h5, .h5, h6, .h6
  font-weight: bold
  color: #6060cc

.error-message
  background: #f090a0

.info-message
  background: #d0d0ea

.crypt-total
  color: #7575a5

.form-control:focus,
.custom-select:focus
  box-shadow: none
  border-color: gray
.result-header
  background: #d0d0ea
.about-version
  background: #d0d0ea

img.card-popover
  height: 420px
.popover
  max-width: 330px

.name
  color: #306090

.deck-sidecrypt,
.deck-sidelibrary
  opacity: 0.55

.deck-sidecrypt img,
.deck-sidelibrary img
  opacity: 0.6

.deck-crypt-table
  width: 100%
.deck-crypt-table td.quantity
  width: 14%
.deck-crypt-table td.capacity
  width: 5%
.deck-crypt-table td.disciplines
  width: 45%
.deck-crypt-table td.name
  width: 24%
.deck-crypt-table td.clan
  width: 8%
.deck-crypt-table td.group
  width: 4%
.deck-crypt-table td
  border-top: 1px solid lightgray
