.result-header
  background: #d0d0ea
.about-version
  background: #d0d0ea

.deck-sidecrypt,
.deck-sidelibrary
  opacity: 55%
.deck-sidecrypt img
.deck-sidelibrary img
  opacity: 60%

.deck-crypt-table
  width: 100%
.deck-crypt-table .quantity
  width: 14%
.deck-crypt-table .capacity
  width: 5%
.deck-crypt-table .disciplines
  width: 37%
.deck-crypt-table .name
  width: 32%
.deck-crypt-table .clan
  width: 8%
.deck-crypt-table .group
  width: 4%
.deck-crypt-table, td.quantity, td.capacity, td.disciplines, td.name, td.clan, td.group
  border: 1px solid lightgray
.deck-crypt-table td
  text-align: center
.deck-crypt-table td.name
  text-align: left

.deck-library-table
  width: 100%
.deck-library-table .quantity
  width: 20%
.deck-library-table .name
  width: 45%
.deck-library-table .cost
  width: 5%
.deck-library-table .clan,
.deck-library-table .disciplines
  width: 23%
.deck-library-table .burn
  width: 7%
.deck-library-table, td.quantity, td.name, td.cost, td.clan, td.disciplines, td.burn
  border: 1px solid lightgray
.deck-library-table td
  text-align: center
.deck-library-table td.name
  text-align: left

.search-crypt-table
  width: 100%
.search-crypt-table .capacity
  width: 8%
.search-crypt-table .disciplines
  width: 42%
.search-crypt-table .name
  width: 34%
.search-crypt-table .clan
  width: 11%
.search-crypt-table .group
  width: 5%
.search-crypt-table, td.quantity, td.capacity, td.disciplines, td.name, td.clan, td.group
  border: 1px solid lightgray
.search-crypt-table td
  text-align: center
.search-crypt-table td.name
  text-align: left

.search-library-table
  width: 100%
.search-library-table .cost
  width: 7%
.search-library-table .type
  width: 13%
.search-library-table .disciplines
  width: 22%
.search-library-table .name
  width: 38%
.search-library-table .clan
  width: 12%
.search-library-table .burn
  width: 8%
.search-library-table, td.cost, td.type, td.disciplines, td.name,  td.clan, td.burn
  border: 1px solid lightgray
.search-library-table td
  text-align: center
.search-library-table td.name
  text-align: left

.clan-image-results
  height: 27px
.discipline-image-results,
.discipline-base-image-results,
.burn-image-results
  height: 25px
.type-image-results
  height: 27px
.discipline-superior-image-results
  height: 30px
.cost-image-results
  height: 36px
.capacity-image-results
  height: 26px
.discipline-base-image-forms
  width: 34px
  height: 34px
.discipline-superior-image-forms
  width: 40px
  height: 40px
.virtue-image
  margin-left: 4px
  margin-right: 5px
  height: 33px

.discipline-container,
.virtue-container
  width: 42px
  height: 42px
.discipline-container:hover,
.virtue-container:hover
  cursor: pointer
.discipline-container.state0 .discipline-base-image-forms
  display: flex
  opacity: 0.35
.discipline-container.state0 .discipline-superior-image-forms
  display: none
.discipline-container.state1 .discipline-base-image-forms
  display: flex
.discipline-container.state1 .discipline-superior-image-forms
  display: none
.discipline-container.state2 .discipline-base-image-forms
  display: none
.discipline-container.state2 .discipline-superior-image-forms
  display: flex
.virtue-container.state0 .virtue-image
  display: flex
  opacity: 0.35
.virtue-container.state1 .virtue-image
  display: flex

.navbar
  padding: 0rem

.library-result-odd,
.crypt-result-odd
  background-color: #eaeaea

h5, .h5, h6,.h6
  font-weight: bold
  color: #6060cc

.form-control:focus,
.custom-select:focus
  box-shadow: none
  border-color: gray